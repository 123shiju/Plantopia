<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="/public/famm/css/user/registration.css" type="text/html">

  <link rel="stylesheet" href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css">
  <script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@v2.x.x/dist/alpine.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

  <title>Registration</title>
  <style>
    html,
    body {
      height: 100%;
      margin: 0;
      padding: 0;
    }

    body {
      display: flex;
      justify-content: center;
      align-items: center;
      background-image: url(/famm/img/loginpage/tropical-leaves-plants-background_161844-342.avif);
      background-size: cover;
      background-position: center;
    }
  </style>

</head>

<body>
  <form action=" " method="post">
    <div class="flex justify-center items-center min-h-screen bg-indigo-700"
      style="background-image: url(/famm/img/loginpage/tropical-leaves-plants-background_161844-342.avif);">
      <div class="card transition-all h-auto p-4 w-96 relative bg-white rounded-lg">
        <div class="user h-full w-full flex">
          <div class="signup w-full transition-all">
            <hr class="mt-5">
            <div class="relative"> <input
                class="text-sm border border-indigo-100 px-2 rounded-lg w-full h-12 mt-7 transition-all focus:border-blue-400 outline-none"
                type="text" placeholder="Enter your name" name="name" id="name" required> <span
                class="text-pink-800 text-sm absolute top-2 left-0" style="color: #256e03;">Name</span>
              <label style="display: none;" id="errorName"><u style="color: red;"> Name is required</u></label>
            </div>
            <div class="relative"> <input
                class="text-sm border border-indigo-100 px-2 rounded-lg w-full h-12 mt-7 transition-all focus:border-blue-400 outline-none"
                type="email"    name="email"   placeholder="Enter your email" id="email"  required> <span
                class="text-pink-800 text-sm absolute top-2 left-0"  style="color: #256e03;">Email</span>
              <label style="display: none;" id="errornumber"><u style="color: red;"> Email is required</u></label>
            </div>
            <div class="relative"> <input
                class="text-sm border border-indigo-100 px-2 rounded-lg w-full h-12 mt-7 transition-all focus:border-blue-400 outline-none"
                type="tel" placeholder="Enter your phone number" name="number" id="mobNo" required> <span
                class="text-pink-800 text-sm absolute top-2 left-0"  style="color:#256e03;">Mobile number</span>
              <label style="display: none;" id="errorEmail"><u style="color: red;"> Phone Number is required</u></label>
            </div>
            <div class="relative"> <input
                class="signup_pass text-sm border border-indigo-100 px-2 rounded-lg w-full pr-12 h-12 mt-7 transition-all focus:border-blue-400 outline-none"
                type="password" placeholder="Enter your password" name="password" id="password" required> <span
                class="text-pink-800 text-sm absolute top-2 left-0"  style="color: #256e03;">Password
                <script src="/public/famm/js/registration.js" type='text/html'></script>

            </div>
            <label style="display: none;" id="errorPassword"><u style="color: red;"> password is required</u></label>

            <button
              class="signup_btn mt-5 h-12 w-full outline-none bg-blue-500 rounded-lg text-sm text-white hover:bg-blue-600 transition-all"  style="background: #70c745;">Sign
              up</button>
            <p class="text-sm text-center text-pink-800 mt-6" >Already have an account? <br> <a
                class="login_page text-blue-600" href="/login">Log in</a> <hr class="mt-5">
                <p style="color: green;"></p>
                <% if(typeof message !=='undefined' ){ %>
                  <p style="color: green;">
                    <%= message %>
                  </p>
                  <% } %>

          </div>

        </div>
      </div>
    </div>

  </form>
  <script>
    $(document).ready(function () {
      $("#name").blur(function () {
        var text = $(this).val()
        if (text.length < 4) {

          $("#errorName").show()
        } else {
          $("#errorName").hide()
        }
      })
    })

    $(document).ready(function () {
      $("#email").blur(function () {
        var text = $(this).val();

        var emailRegex = /^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/;

        if (!emailRegex.test(text) || text.length < 4) {
          $("#errorEmail").show();
        } else {
          $("#errorEmail").hide();
        }
      });
    });

    $(document).ready(function () {
      $("#password").blur(function () {
        var text = $(this).val()
        if (text.length < 4) {

          $("#errorPassword").show()
        } else {
          $("#errorPassword").hide()
        }
      })

    })

    $(document).ready(function () {
      $("#mobNo").blur(function () {
        var text = $(this).val()
        if (text.length < 4) {

          $("#errornumber").show()
        } else {
          $("#errornumber").hide()
        }
      })

    })
  </script>
</body>

</html>