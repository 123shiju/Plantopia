    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class=" mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-6">
                <h2 class="tm-block-title d-inline-block">Add Offer</h2>
              </div>
            </div>
            <div>
              <div class="">
                <form action="" class="tm-edit-product-form" method="post" >
                  <div class="form-group mb-3">
                    <label
                      for=" "
                      > Name </label>
                      <input type="text" placeholder="name" name="name" class="form-control validate"  required>
                  </div>
                  <div class="form-group mb-3">
                    <label
                      for=""
                      >Category
                    </label>
                  <% if(cat_Data && cat_Data.length>0){
                    %>
                    <input type="text"  name="category"  class="form-control validate" required value="<%=cat_Data[0].category_name%>">
                    <%
                  }else{
                    %>
                    <h4>category Not found</h4>
                    <%
                  }
                  %>
                  </div>
                  <div class="row">
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <label
                        for="stock"
                        >discountType
                      </label>
                      <input type="text" placeholder="discountType" name="discountType" class="form-control validate"  required>
                    </div>
                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                          <label
                            for="stock"
                            >discountValue
                          </label>
                          <input type="number" placeholder="discountValue" name="discountValue" class="form-control validate"  required>
                        </div>
                  </div>
                  <div class="row">
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <label
                        for="stock"
                        >startDate
                      </label>
                      <input type="date" placeholder="startDate" name="startDate" class="form-control validate"  required>
                    </div>
                    <div class="form-group mb-3 col-xs-12 col-sm-6">
                      <label
                        for="stock"
                        >endDate
                      </label>
                      <input type="date" placeholder="endDate" name="endDate" class="form-control validate"  required>
                    </div>

                  </div>
              </div>
             <br>
              <div class="col-12">
                <input type="submit" value="Add Offer" class="btn btn-primary btn-block mx-auto">
              </div>
              
            </form>
            <% if(typeof message !=='undefined' ){ %>
              <p style="color: green;">
                <%= message %>
              </p>
              <% } %>
            <br>
            <br>
            <br>
            
            </div>
