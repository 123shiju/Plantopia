                <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                    <h2 class="tm-block-title">Orders List</h2>
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col-2">ORDER ID</th>
                                <th scope="col-2">STATUS</th>
                                <th scope="col-2">Customer Name</th>
                                <th scope="col-2">Date</th>
                                <th scope="col-2">Total Amount</th>
                                <th scope="col-2">Total Quantity</th>
                                <th scope="col-2" style="text-align: center;">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(order=> { %>
                                <tr>
                                    <td scope="row"><b>#<%= order.orderId %></b></td>
                                    <td>
                                        <div class="tm-status-circle moving"></div>
                                        <%= order.orderStatus %>
                                    </td>
                                    <td>
                                        <%= order.user.name%>
                                    </td>
                                    <td><b>
                                            <%= order.createdAt.toLocaleString('en-IN', { day: '2-digit' ,
                                                month: '2-digit' , year: 'numeric' }) %>
                                        </b></td>
                                    <td><b>$<%= order.orderTotal.toFixed(2) %></b></td>
                                    <td><b>
                                            <%= getTotalQuantity(order.items) %>
                                        </b></td>
                                    <% function getTotalQuantity(items) { let totalQuantity=0; items.forEach(item=> {
                                        totalQuantity += item.quantity;
                                        });
                                        return totalQuantity;
                                        } %>

                                        <td>
                                            <div class="row">
                                                <button style="border-color: #4e657a;
                                                border-radius: 8px;
                                                width: 56px; background-color:  #4e657a;">
                                                    <a href="/admin/Cancel_order?id=<%= order.orderId %>"
                                                        style="color: white;">Cancel </a>
                                                </button>
                                                 <button style="border-color: #4e657a;
                                                border-radius: 8px;
                                                width: 56px; background-color:  #4e657a;">
                                                    <a href="/admin/order_details?id=<%= order.orderId %>"
                                                        style="color: white;">Details</a>
                                                </button>
                                            </div>
                                            
                                        </td>
                                </tr>

                                <% }) %>
