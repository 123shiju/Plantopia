    <div class="container tm-mt-big tm-mb-big">
      <div class="row">
        <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
          <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
            <div class="row">
              <div class="col-12">
                <h2 class="tm-block-title d-inline-block">Add Product</h2>
              </div>
            </div>
                <form action="" method="post" enctype="multipart/form-data">
                  <label style="color:antiquewhite">
                    Name
                  </label>
                  <input type="text" placeholder="product_name" name="name" class="form-control validate" value="<%=  product.product_name%>" style="width: 100%">
                  <br>
                  <br>
                  <label style="color:antiquewhite">
                    category
                  </label>
                  <input type="text" placeholder="product_category" name="category" class="custom-select tm-select-accounts" value="<%= product.product_category%>"  >
                  <br>
                  <br>
                  <br>
                  <div>
                    <label style="color:antiquewhite">
                      product price
                    </label>
                    <label style="color:antiquewhite;margin-left: 304px;" >
                      sale price
                    </label>
                    <input type="number" placeholder="product price" name="prdt_price" class="form-control validate" value="<%=  product.product_price%>" style="width: 47%" >
                    
                    <input type="number" placeholder="sale price" name="sale_price" class="form-control validate" value="<%=  product.sale_price%>"  style="width: 47%;margin-left: 400px;margin-top: -49px;" >
                  </div>
                  <br>
                  <br>
                  <div>
                    <label style="color:antiquewhite">
                      stock
                    </label>
                    <label style="color:antiquewhite;margin-left: 359px">
                      discount
                    </label>
                    <input type="text" placeholder="stock" name="stock" class="form-control validate" value="<%=  product.stock%>"  style="width: 47%"  >
                  <input type="number" placeholder="discount" name="discount" class="form-control validate" value="<%=  product.discount%>" style="width: 47%;margin-left: 400px;margin-top: -49px;"  >
                  </div>
                  <br>
                  <br>
                  <label style="color:antiquewhite">
                    special characters
                  </label>
                  <label style="color:antiquewhite;margin-left: 273px">
                   description
                  </label>
                  <input type="text" placeholder="special characters" name="special_characters"  class="form-control validate" value="<%=  product.special_characters%>" style="width: 47%;height: 94px;">
                  <br>
                  <br>
                  <label style="color:antiquewhite">
                   image
                   </label><br>
                   <img src="/productImages/<%= product.image[0] %>" alt="<%= product.image[0] %>" width="50px" height="50px" id="imgView">
                  <input type="file" placeholder="image" name="image" value="<%= product.image%>" style="width: 47%"  multiple  onchange="viewImage(event)"  accept="image/*">
                  <br>
                  <br>
                  <input type="text" placeholder="description" name="description" class="form-control validate" style="height: 200px;margin-left: 400px;margin-top: -243px;width: 47%;" value="<%=  product.description%>" >
                  <br>
                  <br>
                  <input type="hidden" name="id" value="<%= product._id%>">
                  
                  <input type="submit" value="update product details" class="btn btn-primary">
                </form>
            </div>
